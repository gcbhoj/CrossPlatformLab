name: Multi-OS Testing - BhojGC

on:
  push:
    branches:
      - main

jobs:
  test-ubuntu:
    name: Test on Ubuntu
    runs-on: ubuntu-latest

    steps:
      - name: Print start message
        run: echo "Testing on Ubuntu..."

      - name: Display OS information
        run: uname -a

      - name: Create test file
        run: echo "Ubuntu test by BhojGC" > test-ubuntu.txt

      - name: Display file contents
        run: cat test-ubuntu.txt

      - name: Print completion message
        run: echo "Ubuntu tests completed"


  test-windows:
    name: Test on Windows
    runs-on: windows-latest

    steps:
      - name: Print start message
        run: echo "Testing on Windows..."

      - name: Display OS information
        run: systeminfo

      - name: Create test file
        run: echo Windows test by YourName > test-windows.txt

      - name: Display file contents
        run: type test-windows.txt

      - name: Print completion message
        run: echo "Windows tests completed"
